<% content_for :title_nav do %>
  <ul class="breadcrumb">
    <li class="active"><%= @jiapu.name %></li>
    <li class="active pull-right">
      
    </li>
    <li class="active pull-right"><%= link_to '编辑家族树', edit_user_jiapu_path(current_user, @jiapu) %> <span class="divider">  |  </span></li>
    <li class="active pull-right"><a href="#myModal" data-toggle="modal">添加家族成员</a><span class="divider">  |  </span></li>
  </ul>
<% end %>

<!--jiapu info -->
<div class="alert alert-success">
  <%=t @jiapu.note %>
</div>
<!--jiapu users info-->

<% if current_user.user_info.xing.blank? && current_user.user_info.ming.blank? %>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    你还没有更新你的基本信息呢， 请先去更新自己的个人信息吧。 <%= link_to "点击这里", edit_user_user_info_path(current_user, current_user.user_info) %>
  </div>
<% end %>


<div class="page-header">
  <h2>家族成员列表<small>管理家族中的每个成员</small></h2>
</div>
<table class="table table-bordered">
<% @jiapu.user_infos.each do |user_info| %>
  <tr>
    <th>姓名</th>
    <th>性别</th>
    <th>出生地</th>
    <th>出生日期</th>
    <th>Email</th>
    <th colspan="2">操作</th>
  </tr>
  <tr>
    <td><%= user_info.fullname %></td>
    <td><%= user_info.gender %></td>
    <td><%= user_info.birth %></td>
    <td><%= user_info.birth_place %></td>
    <td><%= user_info.email %></td>
    <td>
      <a href="#" class="" data-toggle="popover" title="" data-content='
        <i class="icon-user"></i><a href="/jiapus/new_member?user_info_name=<%= user_info.fullname%>&jiapu_id=<%=@jiapu.id%>&user_info_id=<%=user_info.id%>&relation_type=父亲">添加父亲</a> &nbsp;|&nbsp; <i class="icon-user"></i><a href="/jiapus/new_member">添加母亲</a><br>
        <i class="icon-user"></i><a href="/jiapus/new_member">添加父亲</a> &nbsp;|&nbsp; <i class="icon-user"></i><a href="/jiapus/new_member">添加母亲</a><br>
      ' data-original-title="添加家族成员" data-html="true">添加家族关系成员</a>
    </td>
    <td><%=link_to "编辑", edit_user_user_info_path(current_user, current_user.user_info) %></td>

  </tr>
<% end %>
</table>
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <!-- <h3 id="myModalLabel">添加家族成员</h3> -->
  </div>
  <div class="modal-body">
    <%=render :file => "jiapus/new_member" %>
  </div>
</div>

<script type="text/javascript">
   // popover demo
    $("a[data-toggle=popover]")
      .popover()
      .click(function(e) {
        e.preventDefault()
      })
</script>